<header class="text-white w-full p-2  shadow-xl rounded-t-3xl flex  flex-row items-center justify-around backdrop-blur-lg bg-black/10 sticky top-0 z-10 ">
	<h1 class="w-32 h-10 font-gluten border-r-2 border-pink-600 flex items-center rounded-lg justify-center">
		Dashbord
	</h1>

	{% if app.user %}
		<div class="w-56 h-10  rounded-lg shadow-lg shadow-pink-900 flex flex-row justify-around  items-center p-1 mx-2 font-gluten  ">
			<h4 class="font-gluten w-auto">
				{{app.user.firstname}}
			</h4>

			<img
			id="avatarButton" type="button" data-dropdown-toggle="userDropdown" data-dropdown-placement="bottom-start" class="w-8 h-8  rounded-full cursor-pointer mx-2" src="{{ asset('assets/uploads/avatars/' ~ app.user.avatar ) }}" {# {{ asset('images/logo/marques/' ~ marque.logo) }} #} alt="User dropdown">
			<!-- Dropdown menu -->
			<div id="userDropdown" class="z-10 hidden bg-gradient-to-tl from-white via-stone-400 bg-stone-900  divide-y divide-pink-900 rounded-2xl shadow-xl w-44">
				<div class="px-4 py-3 text-sm text-white ">
					<div>{{ app.user.firstname}}</div>
					<div class="font-medium truncate">{{ app.user.email}}</div>
				</div>

				<ul class="py-1 text-sm text-stone-900" aria-labelledby="avatarButton">
					<li class="block px-4 py-2 hover:bg-stone-400 text-center">
						<h6 class="text-white">Status :</h6>
						<p>
							{{ app.user.roles[0] == "ROLE_SUPER_ADMIN" ? "C\'est toi le boss !!!": "" }}
							{{ app.user.roles[0] == "ROLE_ADMIN"  ? "Administrateur": "" }}
							{{ app.user.roles[0] == "ROLE_USER"  ? "Tu n\'a rien a faire ici !!": "" }}
						</p>
					</li>
				</ul>
				<div class="rounded-b-xl">
					<a href="{{ path('home') }}" class=" block px-4 py-2  text-sm text-pink-800 hover:bg-stone-400 rounded-b-xl ">Retour site</a>
				</div>
			</div>
		</div>
	{% endif %}
</header>
