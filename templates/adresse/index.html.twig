{% extends 'base.html.twig' %}

{% block title %}Hello AdresseController!
{% endblock %}

{% block body %}


	<div class="mx-auto max-w-8xl flex flex-col justify-center mt-20 mb-4 h-full">
		<h3 class=" text-2xl text-white mt-24 w-auto mx-auto ">
			Adresse</h3>
		<div class="container mb-36 mt-12 w-96 h-auto backdrop-blur-3xl bg-black/20 rounded-3xl p-4 z-10 shadow-xl  shadow-black ">
			{{ form_start(adresseForm, {'attr': {'
      novalidate': 'novalidate',
  }})}}
