{% extends 'base.html.twig' %}

{% block title %}Hello AdresseController!
{% endblock %}

{% block body %}


	<div class="mx-auto max-w-8xl flex flex-col justify-center mt-20 mb-4 h-full  ">
		<h3 class=" text-2xl text-white mt-24 w-auto mx-auto ">
			Adresse</h3>

		<div class="container mb-36 mt-12 w-96 h-auto backdrop-blur-xl bg-white/10 rounded-3xl p-4  shadow-xl  shadow-black  z-10 ">
			{{ form_start(adresseForm, {'attr': {'
      novalidate': 'novalidate',
  }})}}
			{{  form_row(adresseForm.nomAdresse )}}
			{{  form_row(adresseForm.numeroRue)}}
			{{  form_row(adresseForm.Rue)}}
			{{  form_row(adresseForm.codePostal)}}
			{{  form_row(adresseForm.ville)}}
			{{  form_row(adresseForm.addresseFav)}}
			<button class="l-6 mt-6 text-white bg-stone-950 hover:bg-green-950 focus:ring-2 focus:outline-none focus:ring-green-600 font-medium rounded-lg text-sm w-full px-3 py-2 text-center">
				Valider</button>
			{{ form_end(adresseForm)}}


		</div>

	</div>
{% endblock %}
