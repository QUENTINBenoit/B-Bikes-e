{% if pageCount > 1 %}
	<div class="flex items-center  rounded-3xl">
		{% if first is defined and current != first %}
			<a class="relative block p-2 mr-1   bg-transparent outline-none rounded-full text-stone-200  " href="{{ path(route, (query|merge({(pageParameterName): current -1 }))) }}" tabindex="-1" aria-disabled="true">
				&lsaquo;
			</a>
		{% endif %}
		{% for page in pagesInRange %}
			{% if page != current %}
				<a class="page-link relative block p-2 border-0 bg-transparent outline-none transition-all duration-300 rounded-full text-stone-950 hover:text-stone-950 hover:bg-stone-400 focus:shadow-none" href="{{ path(route, query|merge({(pageParameterName): page})) }}">
					{{ page }}
				</a>
			{% else %}
				<a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class=" relative block p-2 mx-1 border-0 bg-pink-900 outline-none transition-all duration-300 rounded-full text-white hover:text-white hover:bg-pink-800 shadow-md focus:shadow-md">
					{{ page }}
				</a>
			{% endif %}
		{% endfor %}
		{% if last is defined and current != last %}
			<a class="relative block p-2 ml-1 bg-transparent outline-none rounded-full text-stone-200 " href="{{ path(route, (query|merge({(pageParameterName): current +1 }))) }}" tabindex="-1" aria-disabled="true">
				&rsaquo;
			</a>
		{% endif %}
	</div>
{% endif %}
