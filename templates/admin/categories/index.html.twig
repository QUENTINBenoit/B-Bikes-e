{% extends 'admin/layout.html.twig' %}
{% block title %}Admin Categories
{% endblock %}

{% block content %}
	<h1 class=" text-2xl font-gluten mx-auto mt-12 text-white ">
		Liste des Cat√©gories
	</h1>

	<div class="relative overflow-x-auto shadow-2xl shadow-black sm:rounded-lg font-gluten  mx-auto w-[44rem] my-6 ">
		<table class="w-full text-sm  text-pink-700 ">
			<thead class="text-x uppercase backdrop-blur-3xl bg-black/10 sticky top-0 z-10 ">
				<tr class="divide-x  ">
					<th scope="col" class="px-6 py-3  ">
						Nom
					</th>
					<th scope="col" class="px-6 py-3">
						Edition
					</th>
					<th scope="col" class="px-6 py-3">
						suppresion</th>
				</tr>
			</thead>
			<tbody class=" backdrop-blur-lg bg-black/30 ">
				{% for categorie in categories %}
					<tr class=" text-left border-b-[0.1rem]  ">
						<th scope="row" class="px-6 py-4 font-medium  text-white  divide-pink-900  whitespace-nowrap">
							{{categorie.name}}
						</th>
						<th scope="row" class="py-2 px-12    text-green-400 whitespace-nowrap ">
							<a href="{{ path('admin_categories_edit', {id:categorie.id} ) }}">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8 mx-auto">
									<path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
								</svg>
							</a>
						</th>
						<th scope="row" class=" py-2 px-12  text-red-600 whitespace-nowrap ">
							<a href="{{ path('admin_categories_delete', {id:categorie.id} ) }}">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8 mx-auto">
									<path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
								</svg>
							</a>
						</th>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
	<div class="flex  flex-row justify-between  items-center p-2  w-[44rem] h-auto my-2 mx-auto">
		<a href="{{ path('admin_categories_add') }}" type="submit" class=" ml-6 my-1 text-white bg-stone-900 hover:bg-green-600 focus:ring-2 focus:outline-none focus:ring-stone-900 font-medium rounded-lg text-sm w-full sm:w-auto px-3 py-2 text-center">
			Ajouter
		</a>
		<a href="{{ path('admin_home') }}" type="submit" class=" mr-6 my-4 text-white bg-stone-900 hover:bg-black focus:ring-2 focus:outline-none focus:ring-stone-900 font-medium rounded-lg text-sm w-full sm:w-auto px-3 py-2 text-center">
			Home
		</a>
	</div>


{% endblock %}
