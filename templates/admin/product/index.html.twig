{% extends 'admin/layout.html.twig' %}
{% block title %}Admin Produits{% endblock %}

{% block content %}
 <h1 class=" text-2xl font-gluten mx-auto mt-12 text-white "> Liste des Produits </h1>
     
<div class="relative overflow-x-auto shadow-2xl shadow-black sm:rounded-lg font-gluten  mx-auto w-[44rem] my-6 ">
    <table class="w-full text-sm  text-pink-900 ">
        <thead class="text-x uppercase backdrop-blur-3xl bg-white/10 sticky top-0 ">
            <tr class="divide-x  ">
                <th scope="col" class="px-6 py-3  ">
                     Nom
                </th>
                <th scope="col" class="px-6 py-3" >
                    Edition 
                </th>
                <th scope="col" class="px-6 py-3">
                    suppresion 
                </th>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr class=" text-left border-b-[0.1rem]  ">
                <th scope="row" class="px-6 py-4 font-medium  text-white  divide-pink-900  whitespace-nowrap">
                  {{produit.name}}
                </th>
                <th scope="row" class="py-2 px-12    text-green-900 whitespace-nowrap ">
                    <a href="{{ path('admin_product_edit', {id:produit.id} ) }}" >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                        </svg>
                    </a>
                </th>
                <th scope="row" class=" py-2 px-12  text-red-900 whitespace-nowrap ">
                    <a href="{{ path('admin_product_delete', {id:produit.id} ) }}">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    </a>
                </th>
            </tr>
        {% endfor %}
        </tbody>          
    </table>
  
</div>
  <div class ="flex  flex-row justify-between  items-center p-2  w-[44rem] h-auto my-2 mx-auto"  >
        <a  href="{{ path('admin_product_add')   }}"
            type="submit" 
            class="ml-6 my-1 text-white bg-stone-900 hover:bg-green-600 focus:ring-2
                focus:outline-none 
                focus:ring-stone-900 
                font-medium 
                rounded-lg 
                text-sm 
                w-full 
                sm:w-auto 
                px-3 
                py-2 
                text-center"
            >
            Ajouter
        </a>
        <a  href="{{ path('admin_home')   }}"
            type="submit" 
            class="
                mr-6 
                my4-
                text-white 
                bg-stone-900 
                hover:bg-black 
                focus:ring-2
                focus:outline-none 
                focus:ring-stone-900 
                font-medium 
                rounded-lg 
                text-sm 
                w-full 
                sm:w-auto 
                px-3 
                py-2 
                text-center"
        >
            Home
        </a>
    </div>


{% endblock %}