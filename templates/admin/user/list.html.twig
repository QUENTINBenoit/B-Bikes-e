{% extends 'admin/layout.html.twig' %}
{% block title %}Admin Liste utilisateurs
{% endblock %}

{% block content %}

	<h1 class=" text-2xl font-gluten mx-auto mt-12 text-white ">
		Utilisateur
	</h1>

	<div class="relative overflow-x-auto shadow-2xl shadow-black sm:rounded-lg font-gluten  mx-auto w-auto my-6 ">
		<table class="w-full text-sm  text-pink-600 ">
			<thead class="text-x uppercase backdrop-blur-3xl z-0 bg-black/10 sticky top-0 ">
				<tr class="divide-x  ">
					<th scope="col" class="px-6 py-3  ">
						Pr√©nom
					</th>

					<th scope="col" class="px-6 py-3">
						Roles
					</th>
					<th scope="col" class="px-6 py-3">
						Edition
					</th>
					<th scope="col" class="px-6 py-3">
						Suppression</th>
				</tr>
			</thead>
			<tbody class="  backdrop-blur-lg bg-black/30 ">
				{% for  user in userList %}
					<tr class=" text-left border-b-[0.1rem]  text-white  ">
						<th scope="row" class="px-6 py-4 font-medium  flex items-center   whitespace-nowrap">
							<img class="w-10 h-10 rounded-full" src="{{ asset('assets/uploads/avatars/' ~ user.avatar ) }}" alt="Jese image">
							<div class="pl-3">
								<div class="text-base font-semibold">{{ user.firstname}}
									{{user.lastname}}</div>
								<div class="font-normal text-slate-950">{{ user.email}}</div>
							</div>
						</th>
						<th scope="row" class="py-2 px-12  whitespace-nowrap ">
							{{ user.roles ? user.roles|json_encode : '' }}
						</th>
						<th scope="row" class=" py-2 px-12  text-green-400 whitespace-nowrap ">
							<a href="{{ path('admin_user_edit', {id:user.id} ) }}">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8">
									<path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
								</svg>
							</a>
						</th>
						<th scope="row" class=" py-2 px-12  text-red-600 whitespace-nowrap ">
							{{ include('admin/user/_delete_form.html.twig') }}
						</th>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
	<a href="{{ path('admin_home') }}" type="submit" class="my-2 mx-auto">
		<div class="group buttonRetour">
			<span class="hidden md:block spanRetour my-2">
				Accueil
			</span>
		</div>
		<div class="block shadow-lg shadow-black rounded-2xl w-auto text-center text-blue-900 backdrop-blur-3xl hover:shadow-blue-600 md:hidden">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-16 h-16">
				<path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3"/>
			</svg>
		</div>
	</a>
</div>{% endblock %}
