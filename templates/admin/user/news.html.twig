{% extends 'admin/layout.html.twig' %}
{% block title %}Admin-AjoutProduits{% endblock %}
{% block content %}
<div class="container mt-12 w-full backdrop-blur-3xl bg-white/20 shadow-2xl  rounded-3xl p-4 -z-10  shadow-black">

  {{ form_start(newsUserForm, {'attr': {'
      novalidate': 'novalidate',
  }})}}
  <div class="grid grid-cols-2 gap-2">
      <div class= " col-span-1 shadow-2xl shadow-black rounded-2xl ">
      {{ form_row(newsUserForm.firstname)}}
      {{ form_row(newsUserForm.lastname)}}
      {{ form_row(newsUserForm.email)}}
      </div>
      <div class= " col-span-1 shadow-2xl shadow-black rounded-2xl">
      {{ form_row(newsUserForm.password)}}
      {{ form_row(newsUserForm.avatar)}}
      {{ form_row(newsUserForm.roles)}}
      </div>
  </div>
  <div class ="flex flex-row justify-between  items-center p-2 mx-32 mb-6" >
    <button type="submit" 
          class="
                ml-6 
                mt-12
                text-white 
                bg-stone-900 
                hover:bg-pink-800 
                focus:ring-2
                focus:outline-none 
                focus:ring-stone-900 
                font-medium 
                rounded-lg 
                text-sm 
                w-full 
                sm:w-auto 
                px-3 
                py-2 
                text-center"
    >
     Ajouter
    </button>
    <a   href="{{ path('admin_user_list')   }}"
          class="
                ml-6 
                mt-12
                text-white 
                bg-stone-900 
                hover:bg-pink-800 
                focus:ring-2
                focus:outline-none 
                focus:ring-stone-900 
                font-medium 
                rounded-lg 
                text-sm 
                w-full 
                sm:w-auto 
                px-3 
                py-2 
                text-center"
            >
            back
          </a>
  </div>
  <div>
 

 {{ form_end(newsUserForm)}}
</div>
     
{% endblock %}