{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	Accueil
{% endblock %}

{% block body %}
	<section class="text-white  bg-gradient-to-b from-stone-950 from-10% via-stone-900 via-50%   dark:bg-gray-900 pt-24 ">

		<div class="grid max-w-screen-xl  px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
			<div class="hidden lg:mt-0   lg:col-span-5 lg:flex">
				<img src="{{ asset('assets/uploads/imagehome/benVtt.png' ) }}" alt="mockup" class="">
			</div>
			<div class="mr-auto place-self-center lg:col-span-7 lg:mt-24">
				<h1 class="max-w-2xl mb-4 font-extrabold tracking-tight leading-none md:text-5xl xl:text-4xl  font-gluten text-center">
					Bienvenue sur
					<span class=" font-bold ">
						B
						<strong>
							<span class="text-pink-600 ">'</span>
						</strong>
						bikes
						<strong>
							<span class="text-pink-600">.</span>
						</strong>
						e
					</span>
				</h1>
				<p class="max-w-2xl mb-6 font-light text-gray-100 lg:mb-8 md:text-lg lg:text-xl">
					<span class="text-red-600">
						Attenttion
					</span>
					Ce site est entierement fictif il a pour but de montrer mes competences en developpement web
				</p>
			</div>
		</div>
	</section>
	<div
		class=" container flex flex-col flex-wrap items-center h-auto ">
		{# liste des categories#}
		<section class=" container  flex flex-col items-center justify-between w-full mt-16 ">
			<h2 class=" text-slate-900 text-4xl font-gluten m-4 ">
				Categories</h2>
			<div class="flex  flex-wrap container  justify-around w-full ">
				{% for category in categories %}
					{% if category.parent == null %}
						<a href="{{path('categorie_catego', {id: category.id} ) }}" class=" relative w-56 h-full mb-4   rounded-3xl hover:scale-105 hover:sepia ml-2 hover:transition hover:duration-150 hover:ease-in-out   flex flex-col items-center justify-end    ">
							<img src="{{ asset('assets/uploads/imageCatego/') ~ category.imageCatego }}" class='rounded-3xl ' alt="">
							<h5 class=" absolute text-xl text-black  font-bold  flex justify-center items-center  rounded-b-3xl backdrop-blur-sm  bg-black/10 h-1/5  w-full ">
								<span>{{ category.name}}</span>
							</h5>
						</a>
					{% endif %}
				{% endfor %}
			</div>
		</section>
		{# liste des marques  #}
		<section class=" flex flex-col items-center justify-between w-full rounded-2xl mt-16">
			<h2 class=" text-slate-900 text-4xl font-gluten m-4 ">
				Nos Meilleures Marques</h2>
			<div class=" flex flex-col md:flex-row md:flex-wrap justify-around   w-full p-2 items-center ">
				{% for marque in marques %}
					<a href="{{path('marques_listproduit', {id: marque.id} ) }}" class="m-2">
						<img src="{{ asset('assets/uploads/logo/') ~ marque.logo }}" alt="" class="w-32 h-10 ">
					</a>
				{% endfor %}
			</div>
		</section>
		{# lite des nouvautées   #}
		<section class=" flex flex-col items-center justify-between w-full rounded-2xl mt-16">
			<h2 class=" text-slate-900 text-4xl font-gluten m-4 ">
				Les Nouvautées</h2>
			<div class="  grid grid-cols-2 md:flex md:flex-row  justify-center font-gluten   w-full p-2 items-center ">
				{% for news in  product %}
					{% if news.nouveaute == true  %}
						<a href="{{path('product_details', {id: news.id} ) }}" class="m-2">
							<div class=" bg-white w-32 h-40 rounded-2xl ">
								<div class=" bg-black text-white font-semibold rounded-t-2xl text-center p-y-[0.5rem]">
									<span>News</span>
								</div>
								<img src="{{ asset("images/produits/vtt-cube-stereo-120.jpg")}}" alt="" class="rounded-2xl px-2 pt-1">
								<div class="px-2 pt-1">
									<h4 class="text-sm">{{news.name}}</h4>
									<p class="text-sm">prix:
										<span class="text-red-600">
											{{ news.prix}}</span>
									</p>
								</div>
							</div>
						</a>
					{% endif %}

				{% endfor %}
			</div>
		</section>
	</div>
{% endblock %}
