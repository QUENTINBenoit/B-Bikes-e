{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	{% include "components/_fileAriane.html.twig" %}
	<div class="container mx-auto my-auto mt-24  h-auto">
		<div class="flex  justify-center  md:flex-wrap  ">
			<div class="w-full h-full bg-slate  m-4   ">
				<h1 class="text-2xl font-bold text-center my-6">Mon Panier</h1>
				<!-- tableau tailwind -->
				<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
					<table class="w-full text-sm text-left text-gray-500 bg-white dark:text-gray-400">
						<thead class="text-xs text-gray-700 uppercase  dark:bg-gray-700 dark:text-gray-400">
							<tr>
								<th scope="col" class="px-6 py-3">
									<span class="sr-only">Image</span>
								</th>
								<th scope="col" class="px-6 py-3">
									Produit
								</th>
								<th scope="col" class="px-6 py-3">
									Qty
								</th>
								<th scope="col" class="px-6 py-3">
									Prix
								</th>
								<th scope="col" class="px-6 py-3">
									Action
								</th>
							</tr>
						</thead>
						<tbody>
							{% for productList in produitPanier %}
								<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
									<td class="w-32 p-4">
										<img src="{{ asset('assets/uploads/products/') ~ productList.imageRecup }}" alt="Apple Watch">
									</td>
									<td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
										{{productList.produit.Name}}
									</td>
									<td class="px-6 py-4">
										<div class="flex items-center justify-start ju space-x-3 bg-blue-300">

											<a href="{{ path("cart_add", {id: productList.produit.id}) }}" class=" inline-flex items-center p-1 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-full focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" type="button">
												<span class="sr-only ">Quantity button</span>

												<svg class="w-3 h-3" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
													<path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path>
												</svg>
											</a>

											<div class="bg-green-600 ">
												<p class=" text-center text-xl text-stone-950">{{productList.quantite}}
												</p>
											</div>

											<a href="{{ path("cart_remove", {id: productList.produit.id}) }}" class="inline-flex items-center p-1 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-full focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" type="button">
												<span class="sr-only">Quantity button</span>
												<svg class="w-3 h-3" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
													<path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
												</svg>
											</a>

										</div>
									</td>
									<td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
										{{productList.produit.prix * productList.quantite}}€
									</td>
									<td class="px-6 py-4">
										<a href="#" class="font-medium text-red-600 dark:text-red-500 hover:underline">Remove</a>
									</td>
								</tr>

							{% endfor %}

						</tbody>
						<tfoot class="bg-gray-50 dark:bg-gray-800">
							<tr>
								<td colspan="3" class="px-6 py-4 text-sm font-semibold text-gray-900 dark:text-gray-200">
									Total
								</td>
								<td class="px-6 py-4  bg-slate-200 font-semibold text-gray-900 dark:text-gray-200">
									{{totalPanier}}€
								</td>

							</tr>
						</tfoot>
					</table>
				</div>
				{{ dump() }}
			</div>
		</div>
	</div>
{% endblock %}
